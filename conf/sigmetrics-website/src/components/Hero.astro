---
const { title, lead, heroImage } = Astro.props as {
  title: string;
  lead?: string;
  heroImage?: string;
};
---
<section style="background: linear-gradient(180deg, #f8fafc 0%, #ffffff 70%);">
  <div class="container" style="padding: 28px 0 14px 0;">
    <div class="card" style="overflow:hidden;">
      {heroImage ? (
        <img src={heroImage} alt="" style="width:100%; height: 220px; object-fit: cover; display:block;" />
      ) : (
        <div style="height: 14px; background: #fff;"></div>
      )}
      <div style="padding: 18px 18px 20px 18px;">
        <h1>{title}</h1>
        {lead ? <p class="muted" style="font-size: 1.05rem; max-width: 72ch;">{lead}</p> : null}
      </div>
    </div>
  </div>
</section>
