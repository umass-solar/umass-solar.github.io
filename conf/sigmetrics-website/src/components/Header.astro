---
import Nav from "./Nav.astro";
import { site } from "../content/site";
import type { NavItem } from "../content/site";
const { navItems } = Astro.props as { navItems: NavItem[] };
---
<header style="border-bottom: 1px solid var(--line); background: #fff; position: sticky; top: 0; z-index: 20;">
  <div class="container" style="display:flex; align-items:center; justify-content:space-between; gap: 14px; padding: 14px 18px;">
    <a href="/" style="display:flex; align-items:center; gap: 10px;">
      <img src="/images/logo.svg" alt="" width="28" height="28" style="display:block;" />
      <div style="display:flex; flex-direction:column;">
        <strong style="font-size: 1rem; line-height: 1.1;">{site.title}</strong>
        <span class="muted" style="font-size: .85rem; line-height: 1.1;">{site.tagline}</span>
      </div>
    </a>
    <Nav items={navItems} />
  </div>
</header>
