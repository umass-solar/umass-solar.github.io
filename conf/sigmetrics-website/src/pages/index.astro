---
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";
import CardGrid from "../components/CardGrid.astro";
import Callout from "../components/Callout.astro";
import { site, externalLinks } from "../content/site";
import { officers, committees } from "../content/officers";

const lead =
  "SIGMETRICS is the ACM Special Interest Group for the computer performance evaluation community—covering measurement, modeling, and analysis of computer and communication systems.";
---
<PageLayout pageTitle={site.title} lead={lead} heroImage="/images/hero.jpg">
  <Section title="About">
    <p>
      SIGMETRICS promotes research in performance analysis techniques and the innovative use of known methods and tools.
      It sponsors conferences—including the annual SIGMETRICS conference—and its papers appear in
      <a href={externalLinks.pomacs}>POMACS</a>.
    </p>
    <p class="muted">
      Common target areas include file and memory systems, databases, networks, operating systems, architecture,
      distributed systems, fault tolerance, and real-time systems, alongside methodologies such as instrumentation,
      simulation, statistical analysis, optimization, and queueing theory.
    </p>
  </Section>

  <hr />

  <Section title="Quick Links">
    <CardGrid cols={3}>
      <a class="card" href="/awards" style="padding: 14px 14px; display:block;">Awards</a>
      <a class="card" href="/frequent-authors" style="padding: 14px 14px; display:block;">Frequent Authors</a>
      <a class="card" href="/history" style="padding: 14px 14px; display:block;">History</a>
      <a class="card" href="/mailing-list" style="padding: 14px 14px; display:block;">Mailing List</a>
      <a class="card" href="/newsletter" style="padding: 14px 14px; display:block;">Newsletter</a>
      <a class="card" href="/procedures" style="padding: 14px 14px; display:block;">Procedures</a>
      <a class="card" href="/student-activities" style="padding: 14px 14px; display:block;">Student Activities</a>
      <a class="card" href="/acm-fellows" style="padding: 14px 14px; display:block;">ACM Fellows</a>
      <a class="card" href="/acm-opentoc" style="padding: 14px 14px; display:block;">ACM OpenTOC</a>
      <a class="card" href="/dei" style="padding: 14px 14px; display:block;">Diversity, Equity & Inclusion</a>
      <a class="card" href="/volunteering" style="padding: 14px 14px; display:block;">Volunteering</a>
    </CardGrid>
  </Section>

  <hr />

  <Section title="Officers">
    <div class="grid grid-2">
      {officers.map((o) => (
        <div class="card" style="padding: 14px 14px;">
          <div class="muted" style="font-size: .9rem;">{o.role}</div>
          <div style="font-weight: 650;">
            {o.href ? <a href={o.href}>{o.name}</a> : o.name}
          </div>
        </div>
      ))}
    </div>
  </Section>

  <Section title="Committees">
    <CardGrid cols={2}>
      <Callout title="Board of Directors">
        <ul style="margin: 10px 0 0 18px;">
          {committees.boardOfDirectors.map((m) => (
            <li>{m.href ? <a href={m.href}>{m.name}</a> : m.name}</li>
          ))}
        </ul>
      </Callout>

      <Callout title="Executive Committee">
        <p style="margin: 0 0 10px 0;">{committees.executiveCommitteeNote}</p>
        <ul style="margin: 10px 0 0 18px;">
          {committees.executiveCommitteeMembers.map((n) => (
            <li>{n}</li>
          ))}
        </ul>
      </Callout>
    </CardGrid>
  </Section>

  <hr />

  <Section title="Join SIGMETRICS">
    <CardGrid cols={2}>
      <Callout title="ACM Membership">
        <p style="margin:0;">
          Join ACM first: <a href={externalLinks.joinAcm}>ACM membership</a>
        </p>
      </Callout>
      <Callout title="Add SIGMETRICS">
        <p style="margin:0;">
          Then add SIGMETRICS: <a href={externalLinks.joinSigmetrics}>SIGMETRICS quick join</a>
        </p>
        <p class="muted" style="margin:10px 0 0 0;">
          Members receive the SIGMETRICS newsletter and enjoy reduced registration fees at SIGMETRICS-sponsored conferences.
        </p>
      </Callout>
    </CardGrid>

    <div class="card" style="margin-top: 14px; padding: 14px 14px;">
      <div class="muted">Need to update membership?</div>
      <div><a href={externalLinks.acmStore}>Go to the ACM store</a></div>
    </div>
  </Section>
</PageLayout>
