---
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";
import SourceNote from "../components/SourceNote.astro";
import { site } from "../content/site";

const lead = "The Performance bulletin board: a moderated distribution list for the performance evaluation community.";
---
<PageLayout pageTitle="Mailing List" lead={lead}>
  <Section title="Overview">
    <p>
      The Performance bulletin board is a moderated distribution list intended for exchanging technical information, including
      performance-related questions and announcements of papers, software, jobs, conferences, and calls for papers.
    </p>
  </Section>

  <Section title="Joining">
    <ul>
      <li>Subscribe / unsubscribe / change listing via the official list management links.</li>
      <li>Or email <span class="kbd">performance-request@merlot.usc.edu</span> with the request in the message body.</li>
    </ul>
  </Section>

  <Section title="Posting & archive">
    <ul>
      <li>Send submissions to <span class="kbd">performance@merlot.usc.edu</span> (moderated).</li>
      <li>Archives are available from the official page.</li>
    </ul>
    <SourceNote href={site.originals.mailingList} />
  </Section>
</PageLayout>
