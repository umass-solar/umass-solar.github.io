---
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";
import CardGrid from "../components/CardGrid.astro";
import Card from "../components/Card.astro";
import SourceNote from "../components/SourceNote.astro";
import { site } from "../content/site";

const lead = "A curated entry point to SIGMETRICS historical material (conferences, officers, stories, trivia, web).";
---
<PageLayout pageTitle="History" lead={lead}>
  <Section title="What you'll find">
    <p>
      The official SIGMETRICS history page provides links to conferences, officers, stories/anecdotes, trivia, and prior web sites.
    </p>
    <CardGrid cols={2}>
      <Card title="Conferences / Officers / Stories">
        <p class="muted" style="margin:0;">Use this page as a structured “hub” and migrate items into data files over time.</p>
      </Card>
      <Card title="Modernization plan">
        <p class="muted" style="margin:0;">
          Add a timeline component, then store entries in <span class="kbd">src/content/history.ts</span>.
        </p>
      </Card>
    </CardGrid>
    <SourceNote href={site.originals.history} />
  </Section>
</PageLayout>
