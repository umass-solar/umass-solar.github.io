---
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";
import SourceNote from "../components/SourceNote.astro";
import { site } from "../content/site";

const lead = "Authors who frequently publish and present their work at the SIGMETRICS conference (DBLP-based).";
const top = [
  ["Adam Wierman", 51],
  ["Don Towsley", 46],
  ["Mor Harchol-Balter", 38],
  ["Mahmut T. Kandemir", 34],
  ["Devavrat Shah", 30],
  ["Ness B. Shroff", 25],
  ["Sem C. Borst", 24],
  ["Benny Van Houdt", 23]
];
---
<PageLayout pageTitle="Frequent Authors" lead={lead}>
  <Section title="Top frequent authors (excerpt)">
    <p class="muted">This is a small excerpt. Use the official page for the full list and latest updates.</p>
    <table>
      <thead>
        <tr><th>Author</th><th>Publications</th></tr>
      </thead>
      <tbody>
        {top.map(([name, n]) => (
          <tr><td>{name}</td><td>{n}</td></tr>
        ))}
      </tbody>
    </table>
    <SourceNote href={site.originals.frequentAuthors} />
  </Section>
</PageLayout>
