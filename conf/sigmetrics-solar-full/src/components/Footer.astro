---
import { site } from "../content/site";
---
<footer style="border-top: 1px solid var(--line); padding: 26px 0; margin-top: 24px;">
  <div class="container" style="display:flex; flex-direction:column; gap: 10px;">
    <div class="muted">
      © {new Date().getFullYear()} {site.title} · <a href={site.social.x}>Follow on X</a>
    </div>
    <div class="muted">
      Contact: <a href={`mailto:${site.contact.email}`}>{site.contact.email}</a>
    </div>
  </div>
</footer>
